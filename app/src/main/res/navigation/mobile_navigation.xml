<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.spacebinary.swipeyt.ui.home.HomeFragment"
        android:label="Swipe YT"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.spacebinary.swipeyt.ui.downloads.DownloadFragment"
        android:label="Downloads"
        tools:layout="@layout/fragment_download" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.spacebinary.swipeyt.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>